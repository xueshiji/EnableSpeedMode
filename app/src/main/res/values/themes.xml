<resources>
    <!-- Base application theme. -->
    <style name="Theme.EnableSpeedMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EnableSpeedMode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EnableSpeedMode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EnableSpeedMode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.About" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@android:color/black</item>

        <!--optional-->
        <item name="aboutPageHeaderBackground">@color/blue</item>
        <item name="aboutPageHeaderContentScrim">@color/purple_700</item>
        <item name="aboutPageHeaderTextColor">@color/white</item>
        <item name="aboutPageNavigationIcon">@drawable/ic_baseline_arrow_back_48</item>
    </style>
</resources>